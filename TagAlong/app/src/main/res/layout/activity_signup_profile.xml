<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupProfile"
    android:id="@+id/layout_signUp"
    android:background="@drawable/loginbackground">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_loginLink"
            android:layout_gravity="left"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/login"
            android:textColor="@color/white"
            android:onClick="backToLogin"
            android:textSize="10pt"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/bungee_inline"
            android:text="TAG"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/yellowTheme"
            android:textSize="23pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="-70dp"
            android:fontFamily="@font/bungee_inline"
            android:text="ALONG!"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/yellowTheme"
            android:textSize="23pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_username"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:width="300dp"
            android:background="@drawable/round_edit_text"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/lightSilver"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_email"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:width="300dp"
            android:background="@drawable/round_edit_text"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/lightSilver"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_phoneNumber"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:width="300dp"
            android:background="@drawable/round_edit_text"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/lightSilver"
            android:textSize="18sp" />

        <Button
            android:id="@+id/_registerBtn"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:width="180dp"
            android:onClick="verifyRegistraion"
            android:background="@color/lightWhite"
            android:fontFamily="@font/russo_one"
            android:text="REGISTER"
            android:textColor="@color/blackBlue"
            android:textSize="22sp"
            android:textStyle="bold" />


    </GridLayout>
</RelativeLayout>